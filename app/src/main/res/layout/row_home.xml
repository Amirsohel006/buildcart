<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="homeRowModel" type="com.buildcart.app.modules.home.data.model.HomeRowModel"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_24pxh"
        app:cardElevation="4dp"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/linearColumnrectangle105"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:orientation="vertical" style="@style/groupStylewhite_1">
        <LinearLayout android:gravity="end"
            android:id="@+id/linearRowrectangle105"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/imageRectangle105"
                android:layout_height="@dimen/_67pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_gravity="center"
                android:layout_width="@dimen/_83pxh"
                android:scaleType="fitXY" cornerRadius="@{@dimen/_5pxh}"
                imageRes="@{@drawable/img_image5}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_image5"/>
            <ImageView android:id="@+id/imageVectorTwo"
                android:layout_height="@dimen/_12pxh"
                android:layout_marginBottom="@dimen/_57pxv"
                android:layout_marginStart="@dimen/_3pxh"
                android:layout_width="@dimen/_13pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_vector_gray_800_12x13"
                tools:ignore="ContentDescription" tools:src="@drawable/img_vector_gray_800_12x13"/>
        </LinearLayout>
        <TextView android:ellipsize="end" android:gravity="start"
            android:id="@+id/txtDesignTiles"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_6pxv"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{homeRowModel.txtDesignTiles}"
            style="@style/txtPoppinssemibold14" tools:text="@string/lbl_design_tiles"/>
        <TextView android:ellipsize="end" android:id="@+id/txtPrice"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{homeRowModel.txtPrice}"
            style="@style/txtPoppinsregular10" tools:text="@string/lbl_17_per_piece"/>
        <TextView
            android:background="@drawable/layer_list_border_gray_700_radius_5"
            android:gravity="center_horizontal"
            android:text="20"
            android:id="@+id/spinnerGroup434"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_2pxv"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            tools:listitem="@layout/spinner_item"/>
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/btnAddToCart"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_13pxv"
            android:layout_marginEnd="@dimen/_9pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_5pxv"
            android:paddingEnd="@dimen/_25pxh"
            android:paddingStart="@dimen/_26pxh"
            android:paddingTop="@dimen/_5pxv" android:singleLine="true"
            android:text="@string/lbl_add_to_cart"
            android:textAllCaps="false"
            style="@style/btnSolidRounded1"
            tools:text="@string/lbl_add_to_cart"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
